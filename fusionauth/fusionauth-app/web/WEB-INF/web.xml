<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <listener>
    <listener-class>io.fusionauth.app.primeframework.FusionAuthAppPrimeServletContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>io.fusionauth.app.servlet.FusionAuthAppSessionListener</listener-class>
  </listener>

  <filter>
    <filter-name>utf8</filter-name>
    <filter-class>com.inversoft.servlet.UTF8Filter</filter-class>
  </filter>
  <filter>
    <filter-name>prime-mvc</filter-name>
    <filter-class>com.inversoft.maintenance.servlet.MaintenanceModePrimeFilter</filter-class>
    <init-param>
      <param-name>allowedRequestPrefixes</param-name>
      <param-value>/js,/images,/css,/fonts</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>utf8</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>prime-mvc</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  <error-page>
    <location>/default.jsp</location>
  </error-page>

</web-app>
